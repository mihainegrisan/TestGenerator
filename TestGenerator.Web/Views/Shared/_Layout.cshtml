@using TestGenerator.Web.Extensions
@using Microsoft.AspNetCore.Mvc.TagHelpers
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8"/>
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>@ViewData["Title"] - TestGenerator.Web</title>
  <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
  <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
  <link rel="stylesheet" href="~/TestGenerator.Web.styles.css" asp-append-version="true"/>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.4/font/bootstrap-icons.css">
</head>
<body class="d-flex flex-column min-vh-100">
<header class="sticky-top">
  <nav class="navbar navbar-expand-sm navbar-light bg-light border-bottom box-shadow mb-3">
    <div class="container-fluid">
      <a class="navbar-brand d-flex align-items-center" asp-area="" asp-controller="Test" asp-action="Index">
        <img src="~/images/Logo.svg" alt="" width="55" height="40" class="d-inline-block align-text-top">
        <p class="m-0">Test Generator App</p>
      </a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse collapse d-sm-inline-flex justify-content-end" id="navbarSupportedContent">
        <ul class="nav nav-pills">
          <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="Test" asp-action="Index">Hi, @User.Identity.Name!</a>
          </li>
          <li class="nav-item">
            <a class="nav-link text-dark @Html.ActiveClass("Test", "Index")" asp-area="" asp-controller="Test" asp-action="Index">Tests</a>
          </li>
          <li class="nav-item">
            <a class="nav-link text-dark @Html.ActiveClass("Question", "Index")" asp-area="" asp-controller="Question" asp-action="Index">Questions</a>
          </li>
          <li class="nav-item">
            <a class="nav-link text-dark @Html.ActiveClass("TestGenerator", "Index")" asp-area="" asp-controller="TestGenerator" asp-action="Index">Auto-Generate Test (GPT)</a>
          </li>
          <partial name="_LoginPartial"/>
        </ul>
      </div>
    </div>
  </nav>
</header>

  <div class="container min-vh-100">
  <main role="main" class="pb-3">
    @RenderBody()
  </main>
</div>

  <footer class="mt-5" style="background-color: #F0F3F3;">
    <div class="container p-4 pb-0">
      <div class="row">
        <div class="col-lg-6 col-md-12">
          <h5 class="mb-2 text-dark">Test Generator</h5>
          <span>
            A web app that will help professors, teachers and educators to create tests for students.
          </span>
        </div>
        <div class="col-lg-2 col-md-6">
          <h5 class="mb-2 text-dark">Links</h5>
          <ul class="list-unstyled mb-0">
            <li>
              <a class="nav-link text-dark" asp-area="" asp-controller="Test" asp-action="Index">Tests</a>
            </li>
            <li>
              <a class="nav-link text-dark" asp-area="" asp-controller="Question" asp-action="Index">Questions</a>
            </li>
            <li>
              <a class="nav-link text-dark" asp-area="" asp-controller="TestGenerator" asp-action="Index">Auto-Generate Test (GPT)</a>
            </li>
          </ul>
        </div>
        <div class="col-lg-4 col-md-6">
          <h5 class="mb-2 text-dark text-center">CONTACT</h5>
          <ul class="list-unstyled mb-0 text-center">
            <li class="mb-1">
              <i class="bi bi-geo-alt"></i> Cluj, Romania
            </li>
            <li class="mb-1">
              <i class="bi bi-telephone"></i> +40 999 999 999
            </li>
            <li class="mb-1 text-dark">
              <i class="bi bi-envelope"></i>
              <a href="mailto:mihainegrisan1@gmail.com">mihainegrisan1@gmail.com</a>
            </li>
          </ul>
        </div>
      </div>
    </div>
    <div class="text-center p-2" style="background-color: rgba(0, 0, 0, 0.2);">
      &copy; Test Generator 2023
    </div>
  </footer>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", false)
</body>
</html>