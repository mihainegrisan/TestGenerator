@model List<TestGenerator.DAL.Models.Test>
@{
    ViewData["Title"] = "Index";
    var i = 0;
}


<div class="container-fluid my-3">
  <div class="row">
    <div class="col-6 d-flex align-items-center justify-content-center">
      <h1>Auto Test Generator</h1>
    </div>
    <div class="col-6 text-center">
      <img src="~/images/testGenerator.svg" class="rounded img-fluid mx-auto d-block" height="350" width="350" alt="..." />
    </div>
  </div>
</div>

<section class="d-flex flex-column align-items-center justify-content-center bg-light p-2 rounded-3">
  <div class="navbar navbar-light bg-light p-2 w-75">
    <div class="container-fluid d-flex flex-column flex-md-row">
      <ul class="col-md-auto navbar-nav flex-grow-1 order-1">
        <li class="nav-item">
          <a class="btn btn-primary" asp-action="Generate" asp-controller="TestGenerator" role="button">Create</a>
        </li>
      </ul>
      <form class="d-flex order-3 order-md-2" asp-action="Index" method="get">
        <input class="form-control me-2" type="search" name="searchString" placeholder="Search by name..." value="@ViewData["CurrentFilter"]"/>
        <button class="btn btn-success" type="submit">Search</button>
      </form>
      <div class="col-md-auto order-2 order-md-3">
        <a class="btn btn-secondary m-2" asp-action="Index" role="button">Reset Search</a>
      </div>
    </div>
  </div>

  @if (Model.Count > 0)
  {
    <table class="table w-75">
        <thead>
        <tr>
          <th>Nr.</th>
          <th>Name</th>
          <th>Description</th>
          <th class="text-center">Actions</th>
          <th class="text-center">Download</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var test in Model)
        {
            <tr>
              <td>@(++i)</td>
            <td class="text-truncate" style="max-width: 200px;">@test.Name</td>
            <td class="text-truncate" style="max-width: 200px;">@test.Description</td>
              <td class="text-center">
                <a asp-action="Details" asp-route-id="@test.TestId" class="lock text-dark me-2" title="Details">
                  <i class="bi bi-info-circle icon-unlock"></i>
                  <i class="bi bi-info-circle-fill icon-lock"></i>
                </a>
                <a asp-action="Edit" asp-route-id="@test.TestId" class="lock text-dark me-2" title="Edit">
                  <i class="bi bi-pencil icon-unlock"></i>
                  <i class="bi bi-pencil-fill icon-lock"></i>
                </a>
                <a asp-action="Delete" asp-route-id="@test.TestId" class="lock text-dark me-2" style="cursor: pointer" title="Delete">
                  <i class="bi bi-trash icon-unlock"></i>
                  <i class="bi bi-trash-fill icon-lock"></i>
                </a>
              </td>
              <td class="text-center">
                <a asp-action="DownloadPdf" asp-route-id="@test.TestId" class="lock text-dark me-2" title="Download PDF">
                  <i class="bi bi-file-earmark-pdf icon-unlock"></i>
                  <i class="bi bi-file-earmark-pdf-fill icon-lock"></i>
                </a>
              <a asp-action="DownloadWord" asp-route-id="@test.TestId" class="lock text-dark me-2" title="Download Word">
                  <i class="bi bi-file-word icon-unlock"></i>
                  <i class="bi bi-file-word-fill icon-lock"></i>
                </a>
              </td>
            </tr>
        }
        </tbody>
      </table>
  }
  else
  {
      <p>No tests found.</p>
  }
</section>