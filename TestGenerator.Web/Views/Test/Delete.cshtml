@model TestGenerator.DAL.Models.Test

<h1>Delete Test</h1>

<a class="btn btn-primary mb-3" href="@Url.Action("Index")">Back to List</a>

<div class="alert alert-danger">
  Are you sure you want to delete this test? This action cannot be undone.
</div>

<form method="post" action="@Url.Action("Delete", "Test")">
  @Html.AntiForgeryToken()

  <div class="form-floating mb-3">
    <label class="form-label">ID</label>
    <p class="form-control">@Model.TestId</p>
  </div>

  <div class="form-floating mb-3">
    <label class="form-label">Name</label>
    <p class="form-control">@Model.Name</p>
  </div>

  <div class="form-floating mb-3">
    <label class="form-label">Description</label>
    <p class="form-control">@Model.Description</p>
  </div>

  <button type="submit" class="btn btn-danger">Delete</button>
</form>
