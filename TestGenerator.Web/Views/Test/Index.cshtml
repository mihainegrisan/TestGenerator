@model List<TestGenerator.DAL.Models.Test>

<h1>Tests</h1>

<form asp-action="Add" method="post">
  <div class="form-floating mb-3">
    <input type="text" id="name" name="Name" class="form-control" placeholder="name@example.com"/>
    <label for="name">Name</label>
  </div>
  <div class="form-floating mb-3">
    <input type="text" id="description" name="Description" class="form-control" placeholder="password" />
    <label for="description">Description</label>
  </div>
  <div class="form-floating mb-3">
    <input type="number" id="numberOfQuestions" name="NumberOfQuestions" class="form-control" placeholder="1" />
    <label for="numberOfQuestions">Number of Questions</label>
  </div>
  <div class="form-floating mb-3">
    <input type="number" id="numberOfAnswersPerQuestion" name="NumberOfAnswersPerQuestion" class="form-control" placeholder="1" />
    <label for="numberOfAnswersPerQuestion">Number of Answers per question</label>
  </div>
  <button type="submit" class="btn btn-primary">Create Test</button>
</form>

@if (Model.Count > 0)
{
  <table class="table">
    <thead>
      <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Description</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      @foreach (var test in Model)
      {
        <tr>
          <td>@test.TestId</td>
          <td>@test.Name</td>
          <td>@test.Description</td>
          <td>
            <a class="btn btn-primary btn-sm" href="@Url.Action("Edit", new { id = test.TestId })">Edit</a>
            <a class="btn btn-danger btn-sm" href="@Url.Action("Delete", new { id = test.TestId })">Delete</a>
          </td>
        </tr>
      }
    </tbody>
  </table>
}
else
{
  <p>No tests found.</p>
}
