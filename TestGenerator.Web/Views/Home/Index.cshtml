@{
    ViewData["Title"] = "Home Page";
}

<section class="container-fluid d-flex justify-content-center">
  <div class="row d-flex flex-md-row flex-column align-items-end g-2">

    <div class="my-4 py-4"></div>

    <div class="col-4 p-3">
      <a href="@Url.Action("Index", "Test")">
        <div class="flip-card">
          <div class="flip-card-inner">
            <div class="flip-card-front">
              <img src="~/images/tests.svg" class="img-fluid mx-auto d-block" height="700" width="700" alt="tests">
            </div>
            <div class="flip-card-back">
              <h4 class="title text-center mt-3">Manual Tests</h4>
            </div>
          </div>
        </div>
      </a>
    </div>
    <div class="col-4 p-3">
      <a href="@Url.Action("Index", "Question")">
        <div class="flip-card">
          <div class="flip-card-inner">
            <div class="flip-card-front">
              <img src="~/images/questions.svg" class="img-fluid mx-auto d-block" height="700" width="700" alt="tests">
            </div>
            <div class="flip-card-back">
              <h4 class="title text-center mt-3">Questions</h4>
            </div>
          </div>
        </div>
      </a>
    </div>
    <div class="col-4 p-3">
      <a href="@Url.Action("Index", "TestGenerator")">
        <div class="flip-card">
          <div class="flip-card-inner">
            <div class="flip-card-front">
              <img src="~/images/testGenerator.svg" class="img-fluid mx-auto d-block" height="700" width="700" alt="tests">
            </div>
            <div class="flip-card-back">
              <h4 class="title text-center mt-3">Auto Generate Tests</h4>
            </div>
          </div>
        </div>
      </a>
    </div>
  </div>
</section>