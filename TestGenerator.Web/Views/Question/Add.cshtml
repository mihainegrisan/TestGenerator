@using Microsoft.AspNetCore.Mvc.TagHelpers
@model TestGenerator.DAL.Models.Question
@{
    ViewData["Title"] = "Add";
}

<div class="text-center mb-3">
  <h1 class="my-5">Add new Question</h1>
</div>

<div class="d-flex justify-content-center row">
  <form class="form-width-percent" asp-action="Add" asp-controller="Question" method="post">
    @if (TempData.ContainsKey("ErrorMessage"))
    {
        <div class="alert alert-danger mt-3">@TempData["ErrorMessage"]</div>
    }

    <div class="form-floating mb-3">
      <input type="number" name="numberOfAnswers" id="numberOfAnswers" class="form-control" placeholder="5" required/>
      <label for="numberOfAnswers">Number of Answers</label>
    </div>

    <div class="row mb-3 mt-5">
      <label asp-for="@Model.QuestionText" class="col-sm-2 col-form-label fw-bold">Question </label>
      <div class="col-sm-10">
        <input asp-for="@Model.QuestionText" class="form-control"/>
        <span asp-validation-for="@Model.QuestionText" class="text-danger"></span>
      </div>
    </div>

    <div class="row mb-3">
      <div class="col">
        <input class="btn btn-primary form-control" type="submit" value="Next">
      </div>
      <div class="col">
        <a class="btn btn-secondary form-control" asp-action="Index" role="button">Back to list</a>
      </div>
    </div>
  </form>
</div>