@using Microsoft.AspNetCore.Mvc.TagHelpers
@model List<TestGenerator.DAL.Models.Tag>

<h1>Tags</h1>

<p>
  <a asp-action="Add" class="btn btn-primary">Create New</a>
</p>

<table class="table">
  <thead>
  <tr>
    <th>Name</th>
    <th></th>
  </tr>
  </thead>
  <tbody>
  @foreach (var tag in Model)
  {
    <tr>
      <td>@tag.Name</td>
      <td>
        <a asp-action="Details" asp-route-id="@tag.Id">Details</a> |
        <a asp-action="Edit" asp-route-id="@tag.Id">Edit</a> |
        <a asp-action="Delete" asp-route-id="@tag.Id">Delete</a>
      </td>
    </tr>
  }
  </tbody>
</table>